<a href="https://your-hidden-node-link.com" target="_blank" style="display: none;" id="hiddenNode">.</a>
<script>
  document.addEventListener("keydown", function(event) {
    if (event.key === "M") { // فشار دادن کلید M برای فعال شدن نود مخفی
      document.getElementById("hiddenNode").click();
    }
  });
</script>
